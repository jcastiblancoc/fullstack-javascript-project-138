{
  "name": "@hexlet/code",
  "version": "1.0.0",
  "type": "module",
  "description": "Page loader utility that downloads web pages and saves them locally",
  "keywords": [
    "page-loader",
    "downloader",
    "cli",
    "hexlet"
  ],
  "main": "src/pageLoader.js",
  "bin": {
    "page-loader": "./src/index.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run lint && npm test"
  },
  "dependencies": {
    "axios": "1.1.3",
    "commander": "^10.0.1",
    "fs-extra": "^11.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.26.9",
    "@eslint/config-array": "^0.20.0",
    "@eslint/js": "^9.23.0",
    "@eslint/object-schema": "^2.1.6",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nock": "^13.5.6",
    "rimraf": "^6.0.1"
  },
  "jest": {
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT"
}
