{
  "name": "@hexlet/code",
  "version": "1.0.0",
  "type": "module",
  "description": "Page loader utility that downloads web pages and saves them locally",
  "keywords": [
    "page-loader",
    "downloader",
    "cli",
    "hexlet"
  ],
  "main": "src/pageLoader.js",
  "bin": {
    "page-loader": "./src/index.js"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepublishOnly": "npm run lint && npm test"
  },
  "dependencies": {
    "axios": "1.1.3",
    "commander": "^10.0.1",
    "fs-extra": "^11.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nock": "^13.5.6"
  },
  "jest": {
    "transform": {
      "^.+\\.[tj]s$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexlet-boilerplates/javascript-package.git"
  },
  "bugs": {
    "url": "https://github.com/hexlet-boilerplates/javascript-package/issues"
  },
  "homepage": "https://github.com/hexlet-boilerplates/javascript-package#readme"
}