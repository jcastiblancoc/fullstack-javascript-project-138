{
  "name": "@hexlet/code",
  "version": "1.0.0",
  "type": "module",
  "description": "Page loader utility that downloads web pages and saves them locally",
  "keywords": [
    "page-loader",
    "downloader",
    "cli",
    "hexlet"
  ],
  "main": "src/pageLoader.js",
  "bin": {
    "page-loader": "./src/index.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:debug": "NODE_OPTIONS='--experimental-vm-modules --inspect-brk' jest --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run lint && npm test"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "commander": "^10.0.1",
    "debug": "^4.4.0",
    "fs-extra": "^11.3.0",
    "jsdom": "^26.0.0",
    "listr": "^0.14.3"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "nock": "^13.5.6"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT"
}
